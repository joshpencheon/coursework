<div id="header">
	<p id="login" class="right">	
	<% if logged_in? %>
		You're logged in (<%= link_to 'Settings', edit_user_path(current_user) %>,
		<%= link_to 'Sign out', signout_path %>)
	<% else %>	
		<%= link_to 'Sign in', signin_path %> /
		<%= link_to 'Sign up', signup_path %>
	<% end %>
	</p>
	
	<div id="logo">
		<%= link_to image_tag('logo_b&w.png'), root_url %>
	</div>
	
	<div id="menu" class="clear">
		<ul class="right">
			<li id="help_link"><%= link_to_facebox 'Help', :ajax => help_path %></li>
    	<li id="search_link"><%= menu_link 'Search', users_path %></li>
		</ul>
		<ul>
			<li id="studies_link"><%= menu_link 'Studies', studies_path %></li>
    	<li id="people_link"><%= menu_link 'People', users_path %></li>
  	<% if logged_in? %>
    	<li id="notification_link"><%= menu_link 'My Notifications', :controller => 'notifications' %></li>
    <% end %>
		</ul>
  </div>
</div>

