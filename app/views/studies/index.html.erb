<% if logged_in? && show_welcome_message? %>
	<% require_jquery 'welcome' %>

	<div id="welcome_message" style="display:none;">
		<%= render :partial => "help/welcome" %>		
	</div>
<% end %>

<% sidebar_block('About') do %>
  The SDU knowledge base is a place where information concerning environmental best practices in the NHS can be collected and discussed.
<% end %>

<% sidebar_block('New...') do %>
  <li><%= link_to "Study", new_study_path %></li>
<% end if logged_in? %>

<% sidebar_block('Tags') do %>
  <% cache :action_suffix => 'tags' do %>
    <% Study.ordered_tag_counts.each do |tag| %>
      <p>
        <span class="right"><%= tag.count %></span>
        <%= tag_link_for tag %>
      </p>
    <% end %>
  <% end %>
<% end %>

<% for study in @studies do %>
  <% cache :action_suffix => "#{study.id}_small" do %>
    <div class="study_preview spacer">
      <span class="right"><%= category_image_for study %></span>
      <%= image_tag study.thumbnail_url, :style => 'float:left;margin-right: 1em', :class => 'bordered' %>
      <h1><%= study.category %> - <%= link_to study.title, study %></h1>
      <p style="color:gray">Region: <%= study.region.name %> | Partnership: <%= study.partnership.name %></p>
  
      <% if study.tag_list.any? %>
        <p style="color:gray">tagged with: <%= study.tags.map {|tag| tag_link_for tag }.join(', ') %></p>
      <% end %>
  
      <div class="clear"></div>
    </div>
  <% end %>
<% end %>