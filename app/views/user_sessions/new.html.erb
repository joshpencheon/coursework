<h1>Login</h1>
 
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
	<p>
		<%= f.label :login %>
		<%= f.text_field :login %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me, nil, :style => 'display:inline' %>
	</p>
	<p><%= f.submit "Login" %></p>
<% end %>